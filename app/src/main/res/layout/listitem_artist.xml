<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="match_parent"
        tools:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.anrapps.spotkeeper.widget.SquaredImageView
            android:id="@+id/listitem_artist_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/listitem_artist_image_background"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/listitem_artist_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="?colorPrimaryDark" >

            <TextView
                android:id="@+id/listitem_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Cold Hard Truth" />

            <TextView
                android:id="@+id/listitem_artist_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Beatdown" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>